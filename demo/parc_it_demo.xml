<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Données de démonstration pour le module Parc IT -->
        
        <!-- Types d'équipements -->
        <record id="equipment_type_desktop" model="parc_it.equipment.type">
            <field name="name">Ordinateur de bureau</field>
            <field name="code">DESKTOP</field>
            <field name="description">Ordinateurs fixes</field>
        </record>
        
        <record id="equipment_type_laptop" model="parc_it.equipment.type">
            <field name="name">Ordinateur portable</field>
            <field name="code">LAPTOP</field>
            <field name="description">Ordinateurs portables</field>
        </record>
        
        <record id="equipment_type_server" model="parc_it.equipment.type">
            <field name="name">Serveur</field>
            <field name="code">SERVER</field>
            <field name="description">Serveurs physiques ou virtuels</field>
        </record>
        
        <record id="equipment_type_printer" model="parc_it.equipment.type">
            <field name="name">Imprimante</field>
            <field name="code">PRINTER</field>
            <field name="description">Imprimantes, scanners et multifonctions</field>
        </record>
        
        <record id="equipment_type_network" model="parc_it.equipment.type">
            <field name="name">Équipement réseau</field>
            <field name="code">NETWORK</field>
            <field name="description">Switches, routeurs, firewalls, etc.</field>
        </record>
        
        <!-- Catégories de logiciels -->
        <record id="software_category_os" model="parc_it.software.category">
            <field name="name">Système d'exploitation</field>
            <field name="description">Windows, Linux, macOS, etc.</field>
        </record>
        
        <record id="software_category_office" model="parc_it.software.category">
            <field name="name">Bureautique</field>
            <field name="description">Suites bureautiques et outils de productivité</field>
        </record>
        
        <record id="software_category_security" model="parc_it.software.category">
            <field name="name">Sécurité</field>
            <field name="description">Antivirus, anti-malware, etc.</field>
        </record>
        
        <record id="software_category_utility" model="parc_it.software.category">
            <field name="name">Utilitaires</field>
            <field name="description">Outils système et utilitaires</field>
        </record>
        
        <!-- Types d'interventions -->
        <record id="intervention_type_maintenance" model="parc_it.intervention.type">
            <field name="name">Maintenance préventive</field>
            <field name="description">Maintenance planifiée pour prévenir les pannes</field>
        </record>
        
        <record id="intervention_type_repair" model="parc_it.intervention.type">
            <field name="name">Réparation</field>
            <field name="description">Réparation suite à une panne ou un dysfonctionnement</field>
        </record>
        
        <record id="intervention_type_install" model="parc_it.intervention.type">
            <field name="name">Installation</field>
            <field name="description">Installation de nouveau matériel ou logiciel</field>
        </record>
        
        <record id="intervention_type_upgrade" model="parc_it.intervention.type">
            <field name="name">Mise à niveau</field>
            <field name="description">Mise à niveau matérielle ou logicielle</field>
        </record>
        
        <!-- Types de contrats -->
        <record id="contract_type_basic" model="parc_it.contract.type">
            <field name="name">Support basique</field>
            <field name="description">Support par téléphone et email</field>
        </record>
        
        <record id="contract_type_standard" model="parc_it.contract.type">
            <field name="name">Support standard</field>
            <field name="description">Support technique et interventions sur site</field>
        </record>
        
        <record id="contract_type_premium" model="parc_it.contract.type">
            <field name="name">Support premium</field>
            <field name="description">Support 24/7 et interventions prioritaires</field>
        </record>
        
        <record id="contract_type_all_inclusive" model="parc_it.contract.type">
            <field name="name">Tout inclus</field>
            <field name="description">Support complet incluant la maintenance et le renouvellement</field>
        </record>
        
        <!-- Compétences techniques -->
        <record id="skill_windows" model="parc_it.technician.skill">
            <field name="name">Windows</field>
            <field name="description">Administration de systèmes Windows</field>
        </record>
        
        <record id="skill_linux" model="parc_it.technician.skill">
            <field name="name">Linux</field>
            <field name="description">Administration de systèmes Linux</field>
        </record>
        
        <record id="skill_network" model="parc_it.technician.skill">
            <field name="name">Réseau</field>
            <field name="description">Administration et dépannage réseau</field>
        </record>
        
        <record id="skill_security" model="parc_it.technician.skill">
            <field name="name">Sécurité</field>
            <field name="description">Sécurité informatique</field>
        </record>
        
    </data>
</odoo> 